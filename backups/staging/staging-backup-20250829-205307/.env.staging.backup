# Staging Environment Variables
# Copy this file and configure for your staging environment

# Environment
NODE_ENV=staging
NEXT_PUBLIC_ENVIRONMENT=staging

# Database
STAGING_DB_HOST=postgres-staging
STAGING_DB_PORT=5432
STAGING_DB_NAME=soberlivings_staging
STAGING_DB_USER=postgres
STAGING_DB_PASSWORD=staging_secure_password_change_me
DATABASE_URL=postgresql://${STAGING_DB_USER}:${STAGING_DB_PASSWORD}@${STAGING_DB_HOST}:${STAGING_DB_PORT}/${STAGING_DB_NAME}

# Redis
REDIS_URL=redis://redis-staging:6379
REDIS_PASSWORD=

# API Configuration
STAGING_API_URL=http://staging.soberlivings.com/api
NEXT_PUBLIC_API_URL=${STAGING_API_URL}

# Supabase (Staging)
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-anon-key
SUPABASE_SERVICE_KEY=your-staging-service-key

# FindTreatment API
FINDTREATMENT_API_KEY=your-api-key
FINDTREATMENT_API_URL=https://findtreatment.gov/api/v1

# Firecrawl API (for web scraping)
FIRECRAWL_API_KEY=your-firecrawl-api-key

# Monitoring
STAGING_GRAFANA_PASSWORD=staging_admin_secure_password
PROMETHEUS_RETENTION=7d

# Logging
LOG_LEVEL=debug
ENABLE_METRICS=true
ENABLE_TRACING=true

# Security
JWT_SECRET=your-staging-jwt-secret-change-me
ENCRYPTION_KEY=your-staging-encryption-key-change-me

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_CACHE=true
ENABLE_SEARCH=true
ENABLE_ANALYTICS=false
MAINTENANCE_MODE=false

# External Services
SMTP_HOST=smtp.staging.example.com
SMTP_PORT=587
SMTP_USER=staging@soberlivings.com
SMTP_PASSWORD=staging_smtp_password

# Staging Protection (Basic Auth)
STAGING_AUTH_USER=staging
STAGING_AUTH_PASSWORD=staging_access_password
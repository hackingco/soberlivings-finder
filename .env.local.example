# Local Development Environment Configuration
# Copy this file to .env.local and update with your values

# Application
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE=http://localhost:3000/api

# Database (Local Docker)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/soberlivings

# Redis (Local Docker)
REDIS_URL=redis://localhost:6379

# Search (Meilisearch for local dev)
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_MASTER_KEY=masterKey

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-secret-change-in-production

# Email (Mailhog for local dev)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM=noreply@soberlivings.local

# Mock API Keys for Development
FIRECRAWL_API_KEY=mock-api-key-for-dev
FINDTREATMENT_API_URL=https://findtreatment.gov/locator/exportsAsJson/v2

# Feature Flags
ENABLE_DEBUG_LOGGING=true
ENABLE_MOCK_DATA=true
# Production Environment Variables Template
# Copy to .env.production and fill in actual values

# Database
DATABASE_URL="postgresql://user:password@host:5432/soberlivings_prod?schema=public"
POSTGRES_PRISMA_URL="${DATABASE_URL}"
POSTGRES_URL_NON_POOLING="${DATABASE_URL}"

# Supabase (if using)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Redis Cache
REDIS_URL="redis://default:password@host:6379"
REDIS_HOST="host"
REDIS_PORT="6379"
REDIS_PASSWORD="password"

# Authentication
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# External APIs
GOOGLE_MAPS_API_KEY="your-google-maps-key"
FIRECRAWL_API_KEY="your-firecrawl-key"

# Monitoring
SENTRY_DSN="https://your-sentry-dsn"
PROMETHEUS_PUSHGATEWAY_URL="http://prometheus:9091"

# Feature Flags
ENABLE_CACHE="true"
ENABLE_RATE_LIMITING="true"
ENABLE_MONITORING="true"

# Performance
NODE_ENV="production"
API_TIMEOUT="30000"
MAX_CONCURRENT_REQUESTS="100"
CACHE_TTL="3600"

# Security
CORS_ORIGIN="https://yourdomain.com"
RATE_LIMIT_WINDOW="60000"
RATE_LIMIT_MAX="100"
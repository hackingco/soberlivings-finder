{
  "name": "soberlivings-realtime-service",
  "version": "1.0.0",
  "description": "Real-time WebSocket service for facility availability and updates",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "docker build -t soberlivings-realtime .",
    "docker:run": "docker run -p 3003:3003 soberlivings-realtime",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix"
  },
  "dependencies": {
    "socket.io": "^4.7.5",
    "redis": "^4.6.12",
    "@socket.io/redis-adapter": "^8.2.1",
    "pg": "^8.11.3",
    "jsonwebtoken": "^9.0.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "rate-limiter-flexible": "^4.0.1",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "socket.io-client": "^4.7.5",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "websocket",
    "realtime",
    "socket.io",
    "redis",
    "sober-living",
    "facilities"
  ]
}
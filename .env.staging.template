# Staging Environment Variables Template
# Copy this file to .env.staging and configure with actual values

# Environment
NODE_ENV=staging
NEXT_PUBLIC_ENVIRONMENT=staging

# Database (Replace with secure password)
STAGING_DB_HOST=postgres-staging
STAGING_DB_PORT=5432
STAGING_DB_NAME=soberlivings_staging
STAGING_DB_USER=postgres
STAGING_DB_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD_HERE
DATABASE_URL=postgresql://${STAGING_DB_USER}:${STAGING_DB_PASSWORD}@${STAGING_DB_HOST}:${STAGING_DB_PORT}/${STAGING_DB_NAME}

# Redis (Add password for production)
REDIS_URL=redis://redis-staging:6379
REDIS_PASSWORD=CHANGE_ME_USE_STRONG_REDIS_PASSWORD

# API Configuration
STAGING_API_URL=https://staging.soberlivings.com/api
NEXT_PUBLIC_API_URL=${STAGING_API_URL}

# Supabase (Replace with actual staging values)
SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_STAGING_ANON_KEY_HERE
SUPABASE_SERVICE_KEY=YOUR_STAGING_SERVICE_KEY_HERE
SUPABASE_ANON_KEY=YOUR_STAGING_ANON_KEY_HERE

# JWT Secret (Generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_ME_USE_GENERATED_SECRET_HERE
ENCRYPTION_KEY=CHANGE_ME_USE_GENERATED_KEY_HERE

# Email Service (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=YOUR_APP_PASSWORD_HERE
EMAIL_FROM=noreply@soberlivings.com

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
CORS_ORIGIN=https://staging.soberlivings.com
SESSION_SECRET=CHANGE_ME_USE_GENERATED_SECRET_HERE

# External APIs (if needed)
GOOGLE_MAPS_API_KEY=YOUR_API_KEY_HERE
TWILIO_ACCOUNT_SID=YOUR_ACCOUNT_SID_HERE
TWILIO_AUTH_TOKEN=YOUR_AUTH_TOKEN_HERE

# Feature Flags
ENABLE_SEARCH=true
ENABLE_RATINGS=true
ENABLE_COMMENTS=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=7

# Monitoring Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL
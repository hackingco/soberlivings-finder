{
    "name": "sober-living/wordpress-plugin",
    "description": "WordPress plugin for Sober Living Portal integration",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Sober Living Team",
            "email": "dev@soberlivings.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "^7.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "wp-coding-standards/wpcs": "^3.0",
        "phpstan/phpstan": "^1.10",
        "mockery/mockery": "^1.6",
        "brain/monkey": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "SLP\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SLP\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs": "vendor/bin/phpcs --standard=WordPress --extensions=php .",
        "cs-fix": "vendor/bin/phpcbf --standard=WordPress --extensions=php .",
        "stan": "vendor/bin/phpstan analyse -l 7 .",
        "check": [
            "@cs",
            "@stan",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}